{
  "manifest_version": 3,
  "name": "Explain This Code",
  "version": "1.0",
  "description": "Highlight code and get a plain-English explanation using AI.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
